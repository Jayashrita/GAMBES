&GLOBAL
  PRINT_LEVEL LOW
  WALLTIME 1200000
   PROJECT Hydrobromane
!  RUN_TYPE WFN_OPT
!   RUN_TYPE GEO_OPT
  RUN_TYPE MD
   SEED 300
&END GLOBAL

!&EXT_RESTART
!EXTERNAL_FILE RESTART
!RESTART_POS T
!RESTART_VEL T
!RESTART_THERMOSTAT T
!&END EXT_RESTART

&MOTION

  &MD
   COMVEL_TOL 0.000005
   ENSEMBLE NVT
   STEPS 10000 
   TIMESTEP 1
   TEMPERATURE 300.0
!   TEMP_TOL 40

    &THERMOSTAT
      TYPE CSVR
      &CSVR
        TIMECON 100.
      &END CSVR
    &END THERMOSTAT
  &END MD
 
  &FREE_ENERGY
    &METADYN
       USE_PLUMED .TRUE.
       PLUMED_INPUT_FILE ./plumed.dat
    &END METADYN
  &END FREE_ENERGY

  &PRINT
   &TRAJECTORY
     FORMAT XYZ
     &EACH
       MD 10
     &END EACH
   &END TRAJECTORY
   &VELOCITIES 
    FORMAT XYZ
    &EACH
      MD 1000
    &END EACH
   &END VELOCITIES
   &RESTART
    &EACH
     MD 1
    &END EACH
   &END RESTART
   &RESTART_HISTORY
     &EACH
       MD 100000
     &END EACH
   &END RESTART_HISTORY
  &END PRINT


&END MOTION



